<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg" href="/images/favicon.svg">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="/javascripts/deudas.js" defer></script>
  <title><%= title %></title>
</head>

<body>
  <!-- ============================================
       HEADER
       ============================================ -->
  <header>
    <div class="logo">
      <img src="/images/TINOCO.png" alt="Icono Header">
    </div>
    <div class="titulo-header">
      <h2>Municipalidad de Tinoco</h2>
    </div>
    <div class="header-icon">
      <img src="/images/alcaldia logo cuadrado.jpg" alt="Logo Alcald+IA">
    </div>
  </header>

  <!-- ============================================
       CONTENIDO PRINCIPAL
       ============================================ -->
  <main>
    <!-- Formulario de búsqueda -->
    <section class="form-section">
      <h1>Sistema de Pago Online</h1>
      <br>
      <h2>Datos del Contribuyente</h2>

      <form action="/buscar" method="POST">
        <div class="form-group">
          <label for="dni">DNI (7-10 dígitos)</label>
          <div style="display: flex; gap: 8px;">
            <input type="text" id="dni" name="dni" pattern="\d{7,10}" minlength="7" maxlength="10" title="El DNI debe tener entre 7 y 10 números" placeholder="Ingrese su número de DNI" value="<%= typeof dni !== 'undefined' ? dni : '' %>" required oninput="this.value = this.value.replace(/[^0-9]/g, '')">
            <button type="submit" class="btn buscar">Buscar</button>
          </div>
          <% if (typeof mensaje !== 'undefined' && mensaje) { %>
          <span class="error-message"><%= mensaje %></span>
          <% } %>
        </div>

        <div class="form-group">
          <label for="nombre">Nombre Completo</label>
          <input type="text" id="nombre" name="nombre" value="<%= clienteNoEncontrado ? 'Contribuyente no encontrado' : (cliente ? (cliente.Nombre + ' ' + cliente.Apellido) : '') %>" placeholder="Nombre del contribuyente" class="<%= clienteNoEncontrado ? 'cliente-no-encontrado' : '' %>" readonly>
        </div>
      </form>
    </section>

    <!-- Tabla de deudas -->
    <% if (deudas && deudas.length > 0) { %>
    <section class="tabla-section">
      <h2>Detalle de Boletas</h2>
      <p style="margin: 10px 0; color: #555; font-weight: 500;">Seleccione los conceptos a abonar:</p>

      <div class="tabla-wrapper">
        <table>
          <thead>
            <tr class="seleccionar-todos-row">
              <th style="text-align: center;">
                <input type="checkbox" id="checkbox-todos" checked>
              </th>
              <th colspan="6" style="text-align: left; padding-left: 1rem;">
                <label for="checkbox-todos" style="cursor: pointer; user-select: none; font-weight: 500;">
                  Seleccionar/Deseleccionar Todo
                </label>
              </th>
            </tr>
            <tr>
              <th style="width: 50px;">Elija</th>
              <th>Fecha</th>
              <th>Detalle</th>
              <th>Cuota</th>
              <th>Importe</th>
              <th>Desc/Int</th>
              <th>Total</th>
            </tr>
          </thead>

          <tbody>
            <% deudas.forEach((deuda, index) => { %>
            <tr>
              <td style="text-align: center;">
                <input type="checkbox" class="checkbox-deuda" data-total="<%= deuda.Total %>" checked>
              </td>
              <td><%= deuda.Fecha %></td>
              <td><%= deuda.Detalle %></td>
              <td><%= deuda.Cuota %></td>
              <td>$ <%= deuda.Importe.toFixed(2) %></td>
              <td class="<%= deuda.Descuento >= 0 ? 'descuento-positivo' : 'interes-negativo' %>">
                $ <%= Math.abs(deuda.Descuento).toFixed(2) %>
              </td>
              <td>$ <%= deuda.Total.toFixed(2) %></td>
            </tr>
            <% }) %>
          </tbody>

          <tfoot>
            <tr class="total-row">
              <td colspan="6" style="text-align: right;"><strong>Total a Pagar:</strong></td>
              <td><strong id="total-final">$ <%= totalGeneral ? totalGeneral.toFixed(2) : '0.00' %></strong></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </section>
    <% } %>

    <!-- Botones de acción -->
    <section class="botones">
      <button class="btn qr">Generar QR</button>
      <button class="btn pagar">Ir a Pagar</button>
    </section>
  </main>

  <!-- ============================================
       FOOTER
       ============================================ -->
  <footer>
    <p>&copy; Power by Alcald+IA. Todos los derechos reservados.</p>
  </footer>

</body>

</html>