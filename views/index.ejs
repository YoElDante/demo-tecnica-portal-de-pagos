<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/ico" href="/images/tinoco.ico">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="/javascripts/deudas.js" defer></script>
  <title><%= title %></title>
</head>

<body>
  <!-- ============================================
       HEADER
       ============================================ -->
  <header>
    <div class="logo">
      <!-- <img src="/images/sanjosedelassalinas.webp" alt="Icono Header"> -->
      <!-- <img src="/images/ISOLOGOTIPO-EL_MANZANO.webp" alt="Icono Header"> -->
      <img src="/images/TINOCO.webp" alt="Icono Header">
    </div>
    <div class="titulo-header">
      <h2>Municipalidad de<br>Tinoco</h2>
    </div>
    <div class="header-icon">
      <img src="/images/alcaldia logo cuadrado.jpg" alt="Logo Alcald+IA">
    </div>
  </header>

  <!-- ============================================
       CONTENIDO PRINCIPAL
       ============================================ -->
  <main>
    <!-- Formulario de búsqueda -->
    <section class="form-section">
      <h1>Sistema de Pago Online</h1>
      <br>
      <h2>Datos del Contribuyente</h2>

      <form action="/buscar" method="POST">
        <div class="form-group">
          <label for="dni">DNI (7-10 dígitos)</label>
          <div class="input-wrapper">
            <input type="text" id="dni" name="dni" pattern="\d{7,10}" minlength="7" maxlength="10" title="El DNI debe tener entre 7 y 10 números" placeholder="Ingrese su número de DNI" value="<%= typeof dni !== 'undefined' ? dni : '' %>" required oninput="this.value = this.value.replace(/[^0-9]/g, '')">
            <button type="submit" class="btn buscar">Buscar</button>
          </div>
          <% if (typeof mensaje !== 'undefined' && mensaje) { %>
          <span class="error-message"><%= mensaje %></span>
          <% } %>
        </div>

        <div class="form-group">
          <label for="nombre">Nombre Completo</label>
          <input type="text" id="nombre" name="nombre" value="<%= clienteNoEncontrado ? 'Contribuyente no encontrado' : (cliente ? (cliente.Nombre + ' ' + cliente.Apellido) : '') %>" placeholder="Nombre del contribuyente" class="<%= clienteNoEncontrado ? 'cliente-no-encontrado' : '' %>" readonly>
        </div>
      </form>
    </section>

    <!-- Tabla de deudas -->
    <% if (deudas && deudas.length > 0) { %>
    <section class="tabla-section">
      <h2>Detalle de Boletas</h2>
      <p style="margin: 10px 0; color: #555; font-weight: 500;">Seleccione los conceptos a abonar:</p>

      <% const TIPO_DESCRIPCIONES = typeof tipoDescripciones !== 'undefined' ? tipoDescripciones : {}; %>
      <% const TIPO_ICONOS = typeof tipoIconos !== 'undefined' ? tipoIconos : {}; %>

      <div style="margin: 0 0 1rem 0; display:flex; gap:1rem; align-items:center; flex-wrap:wrap;">
        <label for="filtro-tipo" style="font-weight:600;">Filtrar por Tipo:</label>
        <% if ((tiposDeuda || []).length === 0) { %>
        <small style="color:#555;">No hay tipos diferenciados en esta búsqueda.</small>
        <% } %>
        <select id="filtro-tipo" class="filtro-tipo" style="padding:0.4rem 0.6rem; border:1px solid #19a8b6; border-radius:6px;">
          <option value="">Todas</option>
          <% (tiposDeuda || []).forEach(t => { %>
          <option value="<%= t %>"><%= TIPO_ICONOS[t] %> <%= TIPO_DESCRIPCIONES[t] || t %></option>
          <% }) %>
        </select>
      </div>

      <div class="tabla-wrapper">
        <table>
          <thead>
            <tr class="seleccionar-todos-row">
              <th style="text-align: center;">
                <input type="checkbox" id="checkbox-todos" checked>
              </th>
              <th colspan="7" style="text-align: left; padding-left: 1rem;">
                <label for="checkbox-todos" style="cursor: pointer; user-select: none; font-weight: 500;">
                  Seleccionar/Deseleccionar Todo
                </label>
              </th>
            </tr>
            <tr>
              <th style="width: 50px;">Elija</th>
              <th>Fecha Vto</th>
              <th>Detalle</th>
              <th>Cuota</th>
              <th>Año</th>
              <th>Importe H.</th>
              <th>Int/Dto</th>
              <th>Total</th>
            </tr>
          </thead>

          <tbody>
            <% deudas.forEach((deuda, index) => { %>
            <tr data-tipo="<%= deuda.Tipo %>">
              <td style="text-align: center;">
                <input type="checkbox" class="checkbox-deuda" data-total="<%= deuda.Total %>" checked>
              </td>
              <td><%= deuda.FechaVto ? new Date(deuda.FechaVto).toLocaleDateString('es-AR', { day: '2-digit', month: '2-digit', year: 'numeric' }) : '-' %></td>
              <td><span class="tipo-icono"><%= deuda.TipoIcono %></span><%= deuda.TipoDescripcion %><% if (deuda.Detalle) { %> - <%= deuda.Detalle %><% } %></td>
              <td><%= deuda.Cuota || '-' %></td>
              <td><%= deuda.Anio || '-' %></td>
              <td>$ <%= deuda.Importe.toLocaleString('es-AR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
              <td class="<%= deuda.Interes >= 0 ? 'interes-negativo' : 'descuento-positivo' %>">
                $ <%= Math.abs(deuda.Interes).toLocaleString('es-AR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
              </td>
              <td>$ <%= deuda.Total.toLocaleString('es-AR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
            </tr>
            <% }) %>
          </tbody>

          <tfoot>
            <tr class="total-row">
              <td colspan="7" style="text-align: right;"><strong>Total a Pagar:</strong></td>
              <td><strong id="total-final">$ <%= totalGeneral ? totalGeneral.toLocaleString('es-AR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) : '0,00' %></strong></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </section>
    <% } %>

    <!-- Contenedor del código QR -->
    <div class="qr-container">
      <img class="imgqr" id="qr-image" src="/images/qr_mercado.webp" alt="QR Code" style="display:none;" />
      <a id="pay-button" href="https://mercadopago.com.ar" style="display:none;" class="btn pagar">Ir a Pagar</a>
    </div>

    <!-- Botones de acción -->
    <section class="botones">
      <button class="btn qr" id="generate-qr" onclick="mostrarQR()">Generar QR</button>
    </section>
  </main>

  <script>
    function mostrarQR() {
      const qrImage = document.getElementById('qr-image');
      const payButton = document.getElementById('pay-button');
      const generateButton = document.getElementById('generate-qr');
      const botonesSection = document.querySelector('.botones');

      // Mostrar imagen QR y botón de pagar
      qrImage.style.display = 'block';
      payButton.style.display = 'block';

      // Ocultar botón de generar QR y toda la sección de botones
      botonesSection.style.display = 'none';
    }
  </script>


  <!-- ============================================
       FOOTER
       ============================================ -->
  <footer>
    <p>&copy; Power by Alcald+IA. Todos los derechos reservados.</p>
  </footer>

</body>

</html>